@model WebISB.Models.user

@{
    ViewBag.Title = "Update";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

@using (Html.BeginForm("Edit", "Quantri", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="card">
        <div class="card-header">
            <div class="row">
                <div class="col-md-6 text-danger text-uppercase tieude">
                    <strong>Quản lý loại tin</strong>
                </div>
                <div class="col-md-6 text-right">
                    <button type="submit" class="btn btn-sm btn-primary">Lưu dữ liệu</button>
                    <a href="@Url.Action("Index","Quantri")" class="btn btn-sm btn-success">Quay lại</a>
                </div>
            </div>
        </div>
        <div class="card-block">
            <div class="row" style="padding: 1% 1% 1% 1%">
                <div class="col-md-6">
                    <div class="form-group">
                        <label>Mã nhân viên</label>
                        @Html.TextAreaFor(model => model.id, new { @class = "form-control", @rows = "1", @readonly = "true" })
                        @Html.ValidationMessageFor(model => model.id, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        <label>Họ tên</label>
                        @Html.TextAreaFor(model => model.name, new { @class = "form-control", @rows = "1" })
                        @Html.ValidationMessageFor(model => model.name, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        <label>Đơn vị</label>
                        @Html.DropDownList("donvi", null, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.donvi, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label>Email</label>
                        @Html.TextAreaFor(model => model.email, new { @class = "form-control", @rows = "1" })
                        @Html.ValidationMessageFor(model => model.email, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        <label>Ngày cập nhật</label>
                        @Html.TextAreaFor(model => model.updated_at, new { @class = "form-control", @rows = "1", @ReadOnly = "true" })
                        @Html.ValidationMessageFor(model => model.updated_at, "", new { @class = "text-danger" })
                    </div>
                </div>
                @Html.HiddenFor(model => model.password)
            </div>
        </div>
    </div>
}
@if (ViewBag.Message != null)
{
    if (ViewBag.tam == 1)
    {
        <script type="text/javascript" charset="utf-8">
            window.onload = function () {
                swal("", "@ViewBag.Message!", "success").then(function () {
                    window.location.href = "/Admin/Quantri";
                });
            };
        </script>
    }
    else
    {
        <script type="text/javascript" charset="utf-8">
            window.onload = function () {
                swal("", "@ViewBag.Message!", "warning");
            };
        </script>
    }

}