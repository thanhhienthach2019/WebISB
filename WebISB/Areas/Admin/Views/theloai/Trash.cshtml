@model IEnumerable<WebISB.Models.FN_Get_TheLoai_Trash_Result>

@{
    ViewBag.Title = "Danh sách thùng rác";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="card">
    <div class="card-header">
        <div class="row">
            <div class="col-md-6 text-danger text-uppercase">
                <strong>Danh sách thùng rác - thể loại</strong>
            </div>
            <div class="col-md-6 text-right">
                <a href="@Url.Action("Index","Theloai")" class="btn btn-sm btn-success">Quay lại</a>
            </div>
        </div>
    </div>
    <div class="card-block" style="padding: 1% 1% 1% 1%">
        @*Sung dung table <thead> va <tbody> thi moi su dung duoc Datatable*@
        <table class="table table-striped table-bordered" id="theloaitable">
            <thead>
                <tr>
                    <th width="1%" style="text-align:center">
                        STT
                    </th>
                    <th width="30%">
                        Tên thể loại
                    </th>
                    <th width="25%">
                        Tên không dấu
                    </th>
                    <th width="15%">
                        Ngày tạo
                    </th>
                    <th width="15%">
                        Ngày cập nhật
                    </th>
                    <th width="15%">
                        Quản lý
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td style="text-align:center;font-weight:bold">
                            @Html.DisplayFor(modelItem => item.STT)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Ten)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.TenKhongDau)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.created_at)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.updated_at)
                        </td>
                        <td>
                            @Html.ActionLink("Khôi phục", "Retrash", "Theloai", new { id = @item.id }, new { @class = "btn btn-info btn-sm", @OnClick = "return confirm('Do you want to recover data?');" })
                            @Html.ActionLink("Xóa bỏ", "Delete", "Theloai", new { id = @item.id }, new { @class = "btn btn-danger btn-sm", @OnClick = "return confirm('You want to delete all Loaitin and Tintuc?');" })
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
<script src="~/Content/Script/database_theloai.js"></script>
