@model IEnumerable<WebISB.Models.FN_Get_Tailieu_Result>

@{
    ViewBag.Title = "Tài liệu";
    Layout = "~/Views/Shared/_LayoutIndex.cshtml";
}

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card" style="background-color:#337AB7; color:white;">
                <div class="card-header">
                    <div class="row">
                        <div class="col-md-12 text-uppercase">
                            @if (ViewBag.nameCharac != "" && ViewBag.nameUnit != "")
                            {
                                <h3 style="margin-top:0px; margin-bottom:0px;"> Tư liệu - @ViewBag.nameCharac - @ViewBag.nameUnit</h3>
                            }
                            else
                            {
                                <h3 style="margin-top:0px; margin-bottom:0px;"> Tư liệu</h3>
                            }
                        </div>
                    </div>
                </div>
            </div>
            <div class="card-block" style="padding: 1% 1% 1% 1%">
                <table class="table table-striped table-bordered" width="100%" id="tabletailieut">
                    <thead>
                        <tr>
                            <th width="1%" style="text-align:center">
                                STT
                            </th>
                            <th width="29%">
                                Mã số
                            </th>
                            <th width="45%">
                                Tiêu đề
                            </th>
                            <th width="15%">
                                Ngày cập nhật
                            </th>
                            <th width="10%">
                                Tư liệu
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td style="text-align:center;font-weight:bold">
                                    @Html.DisplayFor(modelItem => item.STT)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.MaSo)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.TieuDe)
                                </td>
                                <td> 
                                   @Convert.ToDateTime(item.create_at).ToString("dd/MM/yyyy")
                                </td>
                                <td>
                                    <a href="@Url.Action("DownloadFile",new { file = item.FilePath })" class="btn btn-info btn-sm">Tải về</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<script>
    $(document).ready(function () {
        $('#tabletailieut').DataTable();
    });

</script>
