@model IEnumerable<WebISB.Models.Get_LoaiTaiLieu_Result>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutIndex.cshtml";
}

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card" style="background-color:#337AB7; color:white;">
                <div class="card-header">
                    <div class="row">
                        <div class="col-md-6 text-uppercase">
                            <h3 style="margin-top:0px; margin-bottom:0px;"> Tư liệu</h3>
                        </div>
                    </div>
                </div>
            </div>
            <div class="card-block" style="padding: 1% 1% 1% 1%">
                <table class="table table-striped table-bordered" width="100%" id="tableloaitailieu">
                    <thead>
                        <tr>
                            <th width="10%" style="text-align:center">
                                STT
                            </th>
                            <th width="90%">
                                Danh mục tư liệu
                            </th>                      
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td style="text-align:center;font-weight:bold">
                                    @Html.DisplayFor(modelItem => item.STT)
                                </td>
                                <td>
                                    <a href="@Url.Action("donvi","loaitailieu",new { characters = item.MaLoai })" style="color:cadetblue">@item.MaLoai - @item.TenLoai</a>
                                </td>                            
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<script>
    $(document).ready(function () {
        $('#tableloaitailieu').DataTable();
    });

</script>
