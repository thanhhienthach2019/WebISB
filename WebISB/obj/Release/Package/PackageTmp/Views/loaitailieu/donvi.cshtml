@model IEnumerable<WebISB.Models.Get_Tailieu_PhongBan_Result>
@{
    ViewBag.Title = "Tài liệu - đơn vị";
    Layout = "~/Views/Shared/_LayoutIndex.cshtml";
}

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card" style="background-color:#337AB7; color:white;">
                <div class="card-header">
                    <div class="row">
                        <div class="col-md-6 text-uppercase">
                            @if (ViewBag.characters!="")
                            {
                                <h3 style="margin-top:0px; margin-bottom:0px;"> Tư liệu - @ViewBag.characters </h3>
                            }
                            else
                            {
                                <h3 style="margin-top:0px; margin-bottom:0px;"> Tư liệu </h3>
                            }

                        </div>
                    </div>
                </div>
            </div>
            <div class="card-block" style="padding: 1% 1% 1% 1%">
                <table class="table table-striped table-bordered" width="100%" id="tableloaitailieupb">
                    <thead>
                        <tr>
                            <th width="10%" style="text-align:center">
                                STT
                            </th>
                            <th width="30%">
                                Danh mục
                            </th>
                            <th width="60%">
                                Phòng ban
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                        <tr>
                            <td style="text-align:center;font-weight:bold">
                                @Html.DisplayFor(modelItem => item.STT)
                            </td>
                            <td>
                                @item.MaLoai - @item.TenLoai
                            </td>
                            <td>
                                <a href="@Url.Action("Department","tailieut",new { characters = item.MaLoai,unit = item.MS_DV })" style="color:cadetblue">@item.TenDonVi</a>
                            </td>
                        </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<script>
    $(document).ready(function () {
        $('#tableloaitailieupb').DataTable();
    });

</script>


