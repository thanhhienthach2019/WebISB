@model IEnumerable<WebISB.Models.Get_Chitietvb_vb_Result>
@{
    ViewBag.Title = "Chi tiết";
    Layout = "~/Views/Shared/_LayoutIndex.cshtml";
}
<!-- Tab panes -->
<div class="tab-content">
    <div id="vbden" class="tab-pane active">
        <div class="card">
            <div class="card">
                <div class="card-header">
                    <div class="row">
                        <div class="col-md-6 text-danger text-uppercase">
                            <strong>@ViewBag.tieude</strong>
                        </div>
                    </div>
                </div>
            </div>

            <div class="card-block" style="padding: 1% 1% 1% 1%">
                <table class="table table-striped table-bordered" width="100%" id="tablevbcongty">
                    <thead>
                        <tr>
                            <th width="12%">
                                Văn bản số
                            </th>
                            <th width="15%">
                                Ngày ban hành
                            </th>
                            <th width="28%">
                                Đơn vị gửi
                            </th>
                            <th width="15%">
                                Người ban hành
                            </th>
                            <th width="30%">
                                Trích yếu
                            </th>
                            @*<th width="12%">
                                File văn bản
                            </th>*@
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                        <tr>
                            <td height="200px;">
                                @Html.DisplayFor(modelItem => item.Sovb)
                            </td>
                            <td>
                                @Convert.ToDateTime(item.NgayPhatHanh).ToString("dd/MM/yyyy")
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Donvigui)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Trichyeu)
                            </td>
                            @*<td>
                                <a class="btn btn-info" href="@Url.Action("DownloadFile",new { file = item.File })">Tải xuống <span class="glyphicon glyphicon-chevron-right"></span></a>
                            </td>*@
                        </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
